#:import StatusScreen octopipanel.statusscreen.StatusScreen

<StatLabel@Label>:
    font_size: 12
    color: 0,0,0,1
    halign: 'right'
    text_size: self.size

<TextLabel@Label>:
    font_size: 12
    color: 0,0,0,1
    #size: self.texture_size
    text_size: self.size
    halign: 'left'
    markup: True
    bold: True

# Status Screen Layout
<StatusScreen>:
    name: 'status'
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        GridLayout:
            size_hint: 1, .4
            spacing: 5
            cols: 4
            TextLabel:
                text: 'HotEnd:'
            StatLabel:
                text: '{:.1f}째C'.format(root.hotend_temp)
            TextLabel:
                text: 'Bed:'
            StatLabel:
                text: '{:.1f}째C'.format(root.bed_temp)
            TextLabel:
                text: 'Target:'
            StatLabel:
                text: '{:.1f}째C'.format(root.hotend_temp_target)
            TextLabel:
                text: 'Target:'
            StatLabel:
                text: '{:.1f}째C'.format(root.bed_temp_target)
            TextLabel:
                text: 'Z:'
            StatLabel:
                text: '{:.2f}mm'.format(root.z_height)
        TextLabel:
            halign: 'center'
            size_hint: 1, .2
            text: root.status
            
        AnchorLayout:
            id: plot
            canvas:
                Color:
                    rgba: .4,.4,.4,.8
                Line:
                    rectangle: self.x, self.y-1, self.width+1, self.height

