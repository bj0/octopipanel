#:import PrintScreen octopipanel.printscreen.PrintScreen

# Print Screen Layout
<TextLabel@Label>:
    font_size: 10
    color: 0,0,0,1
    #size: self.texture_size
    halign: 'center'
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    markup: True

<PrintScreen>:
    name: 'print'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .3
            orientation: 'horizontal'
            SysButton:
                src: 'play.png'
                text: '         Print'
                on_press: root.octoprint.start_print()
            SysButton:
                src: 'alert.png'
                text: '         Abort'
                on_press: root.octoprint.abort_print()
            SysButton:
                src: 'pause.png'
                text: '         Pause'
                on_press: root.octoprint.pause_print()

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            TextLabel:
                text: 'State: Operational\nFile: FILE.gcode\nFilament: 48.5m / 234.4cm3\nExtimated Print Time: 14:18:45\nPrint Time: 15:15:24\nPrint Time Left: 4:4:4\nCompletion: 5%'
